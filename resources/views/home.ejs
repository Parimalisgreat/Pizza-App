<section class="hero">
    <div class="hero-section">
        <div class="left">
            <h6><em>Are you hungry?</em></h6>
            <h1>Don't Wait!</h1>
            <button class="order-now"  onClick="document.querySelector('.menu').scrollIntoView();">Order Now</button>
        </div>
        <div class="right">
            <img src="/img/hero-pizza.png" alt="">
            
        </div>
    </div>
 </section>
 <section class="menu ">
    <h1>All Pizzas</h1>
    <div class="menus">
    <%pizzas.forEach((pizza)=>{%>
       
        <div class="menu-items">
            <img src="/img/<%=pizza.image%>" alt="">
            <div class="details">
                <h2><%=pizza.name%></h2>
                <span class="size"><%=pizza.size%></span>
                <div class="cost-add">
                    <span class="price">â‚¹<%=pizza.price%></span>
                    <button data-pizza="<%=JSON.stringify(pizza)%>" class="add">
                        <span>+</span>
                        <span>Add</span>
                    </button>
                </div>
            </div>
        </div>
    <%})%>
    </div>
    
 </section>